<Window x:Class="AAInClass7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AA In-Class 7" Height="400" Width="600">
    <Grid>
        <TextBlock Text="In-Class 7" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="36,4,0,0" Visibility="Visible">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.843"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>

        <TextBlock Text="Enter Student Name:" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="29,313,0,0" /> <!--This code take inputed name and creates a folder with the student name inputed-->

        <TextBox Name="StudentNameTextBox" HorizontalAlignment="Center" Height="30" Margin="0,313,0,0" VerticalAlignment="Top" Width="200"/>

        <TextBlock Text="Instructor: Sukhbir Tatla" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="29,339,0,0" Visibility="Visible"/>

        <TextBox Name="ContentTextBox" HorizontalAlignment="Left" Height="200" Margin="10,40,0,0" VerticalAlignment="Top" Width="560" 
                  TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>

        <Button Name="ReadFileButton" Content="Read and Copy File" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="200" Margin="10,245,0,0" Click="ReadFileButton_Click"/>

        <TextBlock Name="StatusTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Width="560" 
                   Margin="10,270,0,0" FontSize="14" Foreground="Red" />
    </Grid>
</Window>